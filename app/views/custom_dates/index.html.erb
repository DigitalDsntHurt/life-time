<p id="notice"><%= notice %></p>

<h1>Custom Dates</h1>

<table>
  <thead>
    <tr>
      <th>Bday</th>
      <th>Dday</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @custom_dates.each do |custom_date| %>
      <tr>
        <td><%= custom_date.bday %></td>
        <td><%= custom_date.dday %></td>
        <td><%= link_to 'Show', custom_date %></td>
        <td><%= link_to 'Edit', edit_custom_date_path(custom_date) %></td>
        <td><%= link_to 'Destroy', custom_date, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

